    "@types/fs-extra": "^9.0.11",
    "@types/inquirer": "^7.3.2",
    "@types/lodash": "^4.14.170",
    "@types/mocha": "^8.2.2",
    "@types/node": "^18.14.6",
    "@types/semver": "^7.3.6",
    "@types/sinon": "^17.0.1",
    "@types/yargs": "^17.0.0",
    "@types/conventional-changelog-config-spec": "2.1.5",
